FROM python:3.13-slim

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y --no-install-recommends \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Instalar uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Establecer directorio de trabajo
WORKDIR /app

# Configurar uv para instalar en el sistema (evita problemas con volumenes y .venv)
ENV UV_PROJECT_ENVIRONMENT="/usr/local"
ENV UV_COMPILE_BYTECODE=1

# Copiar archivos de dependencias
COPY pyproject.toml uv.lock ./

# Instalar dependencias con uv (sin instalar el proyecto aún)
RUN uv sync --frozen --no-install-project

# Copiar código de la aplicación
COPY . .

# Instalar el proyecto (asegura que todo esté sincronizado)
RUN uv sync --frozen

# Exponer puerto
EXPOSE 8000

# Variables de entorno
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Comando de inicio: Ejecutar migraciones y luego iniciar la app
CMD ["sh", "-c", "alembic upgrade head && uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload"]