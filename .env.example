# ============================================
# POSTGRESQL DATABASE
# ============================================
POSTGRES_USER=fotovariedades
POSTGRES_PASSWORD=CAMBIAR_ESTO_EN_PRODUCCION
POSTGRES_DB=fotovariedades_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# URL de conexión completa (se construye automáticamente)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ============================================
# PGADMIN (Interfaz de administración DB)
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@admin.com
PGADMIN_DEFAULT_PASSWORD=CAMBIAR_ESTO_EN_PRODUCCION

# ============================================
# BACKEND (FastAPI)
# ============================================
# Seguridad JWT
SECRET_KEY=GENERAR_UNA_CLAVE_SECRETA_SEGURA_AQUI
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración general
API_V1_PREFIX=/api/v1
DEBUG=True
PYTHONUNBUFFERED=1

# ============================================
# WOMPI (Pasarela de Pagos)
# ============================================
WOMPI_PUBLIC_KEY=pub_test_XXXXX
WOMPI_PRIVATE_KEY=prv_test_XXXXX
WOMPI_EVENTS_SECRET=XXXXX
WOMPI_ENVIRONMENT=test
WOMPI_API_URL=https://sandbox.wompi.co/v1

# ============================================
# FRONTEND (Next.js)
# ============================================
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# EMAIL (Para envío de facturas y QR)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-app-password
SMTP_FROM=noreply@fotovariedades.com

# ============================================
# STORAGE (Para imágenes de productos)
# ============================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp

# ============================================
# OTRAS CONFIGURACIONES
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
TIMEZONE=America/Bogota
